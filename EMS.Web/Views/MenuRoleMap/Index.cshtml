
@{
    ViewBag.Title = "Role Menu Mapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .skin-black .right-side > .content-header {
        background: transparent;
        box-shadow: none;
        margin-left: -232px;
    }
</style>
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Role Menu Mapping
            <small>Preview</small>
        </h1>
    </section>
</aside>
<br />
<form class="form-inline" ng-controller="roleMenuMapping" ng-app="myApp">

    <div class="form-group col-md-12 mb-2">
        <label>Role</label>
        <select ng-model="RoleID" ng-options="item.SeqID as item.Name for item in rolelist" class="form-control"></select>
    </div>
    <br />
    <div class="col-sm-3">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>SrNo.</th>
                    <th>Select</th>
                    <th>Menu</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in menus_list">
                    <td>{{$index+1}}</td>
                    <td><input type="checkbox" ng-checked="item.select_status" ng-model="item.select_status" ng-change="CheckboxActivity($index,item.select_status)" /></td>
                    <td>{{item.title}}</td>
                </tr>
            </tbody>
        </table>
        @*<div class="form-check">
                <input class="form-check-input" type="checkbox">
                <label class="form-check-label" for="gridCheck1">
                        Process Of Record
                    </label>
            </div>*@
        <div class="form-group row">
            <div class="col-sm-5">
                <button type="submit" class="btn btn-primary" ng-click="save(menus_list,RoleID)">Submit</button>
            </div>
        </div>
    </div>
</form>





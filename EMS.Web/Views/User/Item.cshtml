@{
    ViewBag.Title = "User Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .skin-black .right-side > .content-header {
        background: transparent;
        box-shadow: none;
        margin-left: -232px;
    }
</style>
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            User Master
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">User Master</li>
        </ol>
    </section>
</aside>
<br />
<form ng-controller="User" ng-app="myApp">

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">User Code</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" ng-model="model.employee_code" validator="[required]">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">User Name</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" id="inputPassword3" ng-model="model.employee_name" validator="[required]">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email Address</label>
        <div class="col-sm-3">
            <input type="email" class="form-control" ng-model="model.email_address" validator="[required]">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Role</label>
        <div class="col-sm-3">
            <select ng-model="model.role_id" ng-options="x.SeqID as x.Name for x in getroles" class="form-control" validator="[requiredSelect]"></select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">IsActive</div>
        <div class="col-sm-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck1" ng-model="model.is_active">
                @*<label class="form-check-label" for="gridCheck1">
                        IsActive
                    </label>*@
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-5">
            <button type="submit" class="btn btn-primary" ng-click="save()">Submit</button>
        </div>
    </div>
</form>


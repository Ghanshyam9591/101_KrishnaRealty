@{
    ViewBag.Title = "Assign Enquiry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .skin-black .right-side > .content-header {
        background: transparent;
        box-shadow: none;
        margin-left: -232px;
    }
</style>
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Assign Enquiry
            <small>Preview</small>
        </h1>
        @*<div class="breadcrumb">
            <div class="mb-4"> <a href="/EnquiryDataEntry/Item/0" class="btn btn-success float-right ml-1">+</a></div>
        </div>*@
        
    </section>
</aside>

<div ng-app="myApp" ng-controller="assignEnquiryList">
    <div style="overflow:auto">
        <table class="table table-hover table-bordered">
            <thead>
                <tr style="background-color:darkgrey">
                    <th>SrNo</th>
                    <th>Enquiry No.</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Email</th>
                    <th>Cost Upto</th>
                    <th>Agents</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in enquiry_data">
                    <td>{{$index+1}}</td>
                    <td>{{item.seqid}}</td>
                    <td>{{item.name}}</td>
                    <td>{{item.mobile1}} </td>
                    <td>{{item.email}}</td>
                    <td>{{item.cost_upto}}</td>
                    <td><select ng-model="item.assign_to_id" id="assign_to_id" ng-options="x.SeqID as x.Name for x in users" class="form-control"></select></td>
                    <td><button type="submit" class="btn btn-primary px-3" ng-click="save(item)">+</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
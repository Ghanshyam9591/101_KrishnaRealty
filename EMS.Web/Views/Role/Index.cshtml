
@{
    ViewBag.Title = "Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 p-0">
    <ul class="nav">
        <li class="nav-item"> <a class="nav-link text-dark" href="javascript:void(0);"><strong>Statistics</strong></a> </li>
        <li class="nav-item"> <a class="nav-link" href="/Role/Item/0">User Master</a> </li>
    </ul>
    <hr class="m-0">
</div>
<article class="col-md-12">
    <div class="pt-3">
        <div class="mb-4"> <a href="/Role/Item/0" class="btn btn-secondary float-right ml-1">+</a></div>
    </div>
</article>
<br />

<div ng-app="myApp" ng-controller="RoleList">
    <div style="overflow:auto">
        <table class="table table-hover table-bordered">
            <thead>
                <tr style="background-color:darkgrey">
                    <th>SrNo</th>
                    <th>Role Code</th>
                    <th>Role Name</th>
                    <th>Is Active</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in rolegridData">
                    <td>{{$index+1}}</td>
                    <td><a href="/Role/Item/{{item.seqid}}">{{item.role_code}}</a></td>
                    @*<td>{{item.role_code}}</td>*@
                    <td>{{item.role_name}}</td>
                    <td>{{item.is_active}} </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
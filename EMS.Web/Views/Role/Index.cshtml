
@{
    ViewBag.Title = "Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .skin-black .right-side > .content-header {
        background: transparent;
        box-shadow: none;
        margin-left: -232px;
    }
</style>
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
           Role Master
            <small>Preview</small>
        </h1>
        <div class="breadcrumb">
            <div class="mb-4"> <a href="/Role/Item/0" class="btn btn-success float-right ml-1">+</a></div>
        </div>
    </section>
</aside>
<br />

<div ng-app="myApp" ng-controller="RoleList">
    <div style="overflow:auto">
        <table class="table table-hover table-bordered">
            <thead>
                <tr style="background-color:darkgrey">
                    <th>SrNo</th>
                    <th>Role Code</th>
                    <th>Role Name</th>
                    <th>Is Active</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in rolegridData">
                    <td>{{$index+1}}</td>
                    <td><a href="/Role/Item/{{item.seqid}}">{{item.role_code}}</a></td>
                    @*<td>{{item.role_code}}</td>*@
                    <td>{{item.role_name}}</td>
                    <td>{{item.is_active}} </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
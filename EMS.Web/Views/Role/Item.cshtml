
@{
    ViewBag.Title = "Role Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .tooltip {
        background-color: red;
    }
    .skin-black .right-side > .content-header {
        background: transparent;
        box-shadow: none;
        margin-left: -232px;
    }
</style>

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Role Master
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Role Master</li>
        </ol>
    </section>
</aside>
<br />
<form ng-app="myApp" ng-controller="Role">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Role Code</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" ng-model="model.role_code" validator="[required]">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Role Name</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" ng-model="model.role_name" validator="[required]">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">IsActive</div>
        <div class="col-sm-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" ng-model="model.is_active">
                @*<label class="form-check-label" for="gridCheck1">
                        IsActive
                    </label>*@
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-5">
            <button type="submit" class="btn btn-primary" ng-click="save()">Submit</button>
        </div>
    </div>
</form>



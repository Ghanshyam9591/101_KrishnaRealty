
@{
    ViewBag.Title = "Lov Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 p-0">
    <ul class="nav">
        <li class="nav-item"> <a class="nav-link text-dark" href="javascript:void(0);"><strong>Statistics</strong></a> </li>
        <li class="nav-item"> <a class="nav-link" href="/Lov/Item/0">Lov Master</a> </li>
    </ul>
    <hr class="m-0">
</div>
<article class="col-md-12">
    <div class="pt-3">
        <div class="mb-4"> <a href="/Lov/Item/0" class="btn btn-secondary float-right ml-1">+</a></div>
    </div>
</article>
<br />

<div ng-app="myApp" ng-controller="LovList">
    <div style="overflow:auto">
        <table class="table table-hover table-bordered">
            <thead>
                <tr style="background-color:darkgrey">
                    <th>SrNo</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Is Active</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in lov_category">
                    <td>{{$index+1}}</td>
                    <td><a href="/Lov/Item/{{item.id}}">{{item.code}}</a></td>
                    @*<td>{{item.Lov_code}}</td>*@
                    <td>{{item.name}}</td>
                    <td>{{item.category}}</td>
                    <td>{{item.is_active}} </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>